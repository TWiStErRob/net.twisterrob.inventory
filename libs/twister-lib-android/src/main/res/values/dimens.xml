<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Material Design Grid unit -->
	<dimen name="unit_quarter">2dp</dimen>
	<dimen name="unit_half">4dp</dimen>
	<dimen name="unit">8dp</dimen>
	<dimen name="unit_double">16dp</dimen>
	<dimen name="unit_negative_quarter">-2dp</dimen>
	<dimen name="unit_negative_half">-4dp</dimen>
	<dimen name="unit_negative">-8dp</dimen>
	<dimen name="unit_negative_double">-16dp</dimen>

	<!-- http://www.androiddocs.com/design/style/iconography.html#small-contextual
	     Within the body of your app, use small icons to surface actions and/or provide status for specific items. -->
	<!-- TODEL SpUsage https://issuetracker.google.com/issues/80029760 -->
	<dimen name="icon_context" tools:ignore="SpUsage">16dp</dimen>
	<!-- http://www.androiddocs.com/design/style/iconography.html#action-bar
	     Action bar icons are graphic buttons that represent the most important actions people can take within your app. -->
	<dimen name="icon_action">32dp</dimen>
	<!-- Using action-bar icons on the user interface needs bigger size because intrinsic padding is given by ImageButton. -->
	<dimen name="icon_action_button">48dp</dimen>

	<!-- Named sizes based on units -->
	<dimen name="margin_activity">@dimen/unit</dimen>
	<dimen name="margin_activity_half">@dimen/unit_half</dimen>
</resources>
