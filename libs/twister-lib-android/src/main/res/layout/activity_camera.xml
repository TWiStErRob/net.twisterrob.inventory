<?xml version="1.0" encoding="utf-8"?>
<merge
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android"
	tools:ignore="HardcodedText"
	>
	<net.twisterrob.android.view.CameraPreview
		android:id="@+id/preview"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		/>
	<net.twisterrob.android.view.SelectionView
		android:id="@+id/selection"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|center_horizontal"
		android:orientation="horizontal"
		>
		<ImageButton
			android:id="@+id/btn_crop"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@android:drawable/ic_menu_crop"
			android:contentDescription="crop"
			/>
		<ImageButton
			android:id="@+id/btn_capture"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@android:drawable/ic_menu_camera"
			android:contentDescription="capture"
			/>
		<ToggleButton
			android:id="@+id/btn_flash"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/btn_flash_toggle"
			android:textOn="@string/empty"
			android:textOff="@string/empty"
			/>
	</LinearLayout>
</merge>
