<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@id/adapterRoot"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/item_state"
	tools:background="@color/toolsBG"
	>
	<net.twisterrob.android.view.RigidImageView
		android:id="@id/image"
		android:layout_width="@dimen/icon_action"
		android:layout_height="@dimen/icon_action"
		android:layout_margin="@dimen/unit_half"
		android:layout_alignParentStart="true"
		android:layout_centerVertical="true"
		android:focusable="false"
		android:scaleType="centerCrop"
		tools:src="@drawable/category_unknown"
		/>
	<TextView
		android:id="@id/title"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/image"
		android:ellipsize="middle"
		android:focusable="false"
		android:singleLine="true"
		android:textAppearance="?attr/textAppearanceListItemSmall"
		android:textIsSelectable="false"
		tools:text="Recent Item Name"
		tools:ignore="Deprecated"
		/>
	<TextView
		android:id="@id/details"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignEnd="@id/title"
		android:layout_alignStart="@id/title"
		android:layout_below="@id/title"
		android:focusable="false"
		android:textAppearance="?android:attr/textAppearance"
		android:textIsSelectable="false"
		android:textSize="12sp"
		tools:text="1 day ago, 21:30 (4x)"
		/>
</RelativeLayout>
