<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	package="net.twisterrob.inventory.android.test"
	android:sharedUserId="net.twisterrob.inventory">

	<!-- Lint will hopefully find the usages and notice that it's not callable from everywhere. -->
	<uses-sdk tools:overrideLibrary="android.support.test.uiautomator.v18" />

	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
	<uses-permission android:name="android.permission.SET_ANIMATION_SCALE" />

	<!-- Normally added by Gradle: <instrumentation android:name="....AndroidJUnitRunner" ... />
	     @see build.gradle: android.defaultConfig.testInstrumentationRunner
	     Need to duplicate the name attribute to help the manifest merger (element looked up via android:name as key).
	-->
	<!--suppress AndroidDomInspection android:package is merged in by Gradle -->
	<instrumentation android:name="net.twisterrob.android.test.junit.AndroidJUnitRunner">
		<!--suppress AndroidElementNotAllowed STOPSHIP does it really not? -->
		<meta-data android:name="defaultExcludedPackages"
		           android:value="net.twisterrob.inventory.android.test.suites" />
	</instrumentation>

	<application
		android:label="@string/app_name"
		android:process="net.twisterrob.inventory.debug">
		<!-- Automatically added by Gradle: -->
		<!--<uses-library android:name="android.test.runner" />-->

		<activity
			android:name="net.twisterrob.inventory.android.test.activity.TestActivity"
			android:label="TestActivity"
			/>

		<activity
			android:name="net.twisterrob.inventory.android.test.activity.TestActivityCompat"
			android:label="TestActivityCompat"
			/>

		<activity
			android:name="net.twisterrob.inventory.android.test.activity.CompatibleLauncher"
			android:label="CompatibleLauncher"
			/>

		<activity
			android:name="net.twisterrob.android.test.espresso.EspressoExtensionsTest_onActionMenuView$TestActivity"
			android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
			/>

	</application>
</manifest>
