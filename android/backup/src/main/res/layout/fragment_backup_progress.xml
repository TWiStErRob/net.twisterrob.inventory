<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="@dimen/unit_half"
	android:orientation="horizontal"
	android:animateLayoutChanges="true"
	tools:context="net.twisterrob.inventory.android.fragment.BackupProgressFragment"
	>
	<ImageButton
		android:id="@+id/progress__cancel"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:padding="0dp"
		android:layout_marginStart="@dimen/unit"
		android:layout_alignParentEnd="true"
		android:layout_alignParentTop="true"
		android:src="@android:drawable/ic_menu_close_clear_cancel"
		android:gravity="center"
		/>
	<ImageView
		android:id="@+id/progress__icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="@dimen/unit"
		tools:src="@android:drawable/ic_menu_upload"
		/>
	<ProgressBar
		android:id="@+id/progress__cancel_wait"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_marginStart="@dimen/unit"
		android:layout_alignParentEnd="true"
		android:layout_alignParentTop="true"
		android:indeterminate="true"
		android:visibility="invisible"
		tools:visibility="visible"
		/>
	<ProgressBar
		android:id="@+id/progress"
		style="?android:attr/progressBarStyleHorizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_toEndOf="@id/progress__icon"
		android:layout_toStartOf="@id/progress__cancel"
		tools:max="100"
		tools:progress="66"
		/>
	<TextView
		android:id="@+id/progress__counts"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/progress"
		android:layout_toStartOf="@id/progress__cancel"
		android:textIsSelectable="false"
		tools:text="666/1000"
		/>
	<TextView
		android:id="@+id/progress__percentage"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/progress"
		android:layout_toEndOf="@id/progress__icon"
		android:textIsSelectable="false"
		tools:text="66%"
		/>
	<TextView
		android:id="@+id/progress__description"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/progress__percentage"
		android:textIsSelectable="false"
		tools:text="Exporting blah blah"
		/>
</RelativeLayout>
