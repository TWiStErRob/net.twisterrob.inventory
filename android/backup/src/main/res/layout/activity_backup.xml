<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="@dimen/unit_half"
	android:orientation="vertical"
	tools:context="net.twisterrob.inventory.android.activity.BackupActivity"
	tools:ignore="UnusedIds"
	>

	<androidx.fragment.app.FragmentContainerView
		android:id="@+id/backup_progress"
		android:name="net.twisterrob.inventory.android.fragment.BackupProgressFragment"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		tools:layout="@layout/fragment_backup_progress"
		/>

	<androidx.fragment.app.FragmentContainerView
		android:id="@+id/backup_controller"
		android:name="net.twisterrob.inventory.android.fragment.BackupControllerFragment"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		tools:layout="@layout/fragment_backup_controller"
		/>

</LinearLayout>
