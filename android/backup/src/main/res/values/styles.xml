<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

	<style name="BackupAction">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:padding">32dp</item>

		<item name="android:drawablePadding">16dp</item>
		<item name="android:drawableStart">@null</item>

		<item name="android:text">@null</item>
		<item name="android:gravity">start|center_vertical</item>
		<!-- lint:SpUsage text is sized according to backup_icon_size. -->
		<item name="android:textSize" tools:ignore="SpUsage">48dp</item>
		<item name="android:maxLines">1</item>
	</style>

	<dimen name="backup_icon_size">120dp</dimen>
	<dimen name="backup_icon_padding">16dp</dimen>

</resources>
