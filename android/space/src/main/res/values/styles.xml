<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

	<style name="ManageSpaceText">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">@dimen/unit_half</item>
		<item name="android:textAppearance">?android:textAppearanceSmall</item>
	</style>

	<style name="ManageSpaceDots">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">1dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_gravity">bottom</item>
		<item name="android:layout_marginLeft">1dp</item>
		<item name="android:layout_marginRight">1dp</item>
		<item name="android:layout_marginBottom">4dp</item>
		<item name="android:src">@drawable/dotted_line</item>
		<item name="android:scaleType">center</item>
	</style>

	<style name="ManageSpaceTitle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:maxLines">1</item>
		<item name="android:textAppearance">?android:textAppearanceMedium</item>
		<item name="android:textIsSelectable" tools:ignore="NewApi">false</item>
	</style>

	<style name="ManageSpaceButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">end</item>
		<item name="android:paddingLeft">@dimen/unit_double</item>
		<item name="android:paddingRight">@dimen/unit_double</item>
		<!-- Propagates parent layout's android:enabled to this button. -->
		<item name="android:duplicateParentState">true</item>
	</style>
</resources>
