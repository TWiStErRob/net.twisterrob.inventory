<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

	<style name="Theme.AppTheme.Header">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:textAllCaps" tools:ignore="NewApi">true</item>
		<item name="android:background">@color/accent</item>
		<item name="android:textColor">@color/accentTitleText</item>
	</style>

	<style name="Theme.AppTheme.RecyclerRefresh">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:enabled">false</item>
	</style>

	<style name="Theme.AppTheme.RecyclerList">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<!--<item name="android:padding">@dimen/margin</item>-->
		<item name="android:scrollbars">vertical</item>
	</style>

	<style name="EmptyText">
		<item name="android:id">@android:id/empty</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_margin">@dimen/unit</item>
		<item name="android:gravity">center</item>
		<!-- TODEL https://issuetracker.google.com/issues/37043656 <item name="tools:text">...</item> -->
	</style>
</resources>
