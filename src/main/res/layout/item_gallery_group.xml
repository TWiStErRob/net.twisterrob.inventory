<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@id/adapterRoot"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@drawable/item_state"
	tools:context="view.GalleryAdapter"
	>
	<View
		android:layout_width="fill_parent"
		android:layout_height="@dimen/marginHalf"
		android:background="@color/primary"
		/>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="horizontal"
		>
		<net.twisterrob.android.view.RigidImageView
			android:id="@id/image"
			android:layout_width="@dimen/icon_big"
			android:layout_height="@dimen/icon_big"
			android:layout_gravity="center_vertical"
			android:layout_margin="@dimen/margin"
			android:focusable="false"
			android:scaleType="fitCenter"
			tools:src="@drawable/category_unknown"
			/>
		<TextView
			android:id="@id/title"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:padding="@dimen/margin"
			android:layout_weight="1"
			android:focusable="false"
			android:gravity="center"
			android:labelFor="@id/adapterRoot"
			android:textColor="@color/primaryTitleText"
			android:textIsSelectable="false"
			android:textSize="18sp"
			tools:text="Gallery List Group Title"
			/>
		<include
			android:id="@id/count"
			layout="@layout/inc_count"
			/>
	</LinearLayout>
	<View
		android:layout_width="fill_parent"
		android:layout_height="@dimen/margin"
		android:background="@color/primary"
		/>
</LinearLayout>