<?xml version="1.0" encoding="utf-8"?>
<!--
	Layout for the navigation drawer with optional icon and counter.
	@see http://developer.android.com/design/patterns/navigation-drawer.html#Style
-->
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@id/adapterRoot"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:background="@drawable/item_state"
	tools:layout_width="240dp"
	tools:background="@color/toolsBG"
	tools:context=".view.IconedItemAdapter"
	>
	<!-- TODO android.support.v7.widget.Space -->
	<View
		android:layout_width="4dp"
		android:layout_height="fill_parent"
		android:background="@drawable/item_drawer_active"
		/>
	<ImageView
		android:id="@id/image"
		android:layout_width="?attr/listPreferredItemHeightSmall"
		android:layout_height="?attr/listPreferredItemHeightSmall"
		android:layout_gravity="center_vertical"
		android:padding="@dimen/margin"
		android:layout_marginLeft="8dp"
		android:layout_marginStart="8dp"
		android:visibility="gone"
		tools:src="@drawable/category_unknown"
		tools:visibility="visible"
		/>
	<TextView
		android:id="@id/title"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginLeft="12dp"
		android:layout_marginStart="12dp"
		android:layout_weight="1"
		android:minHeight="?attr/listPreferredItemHeightSmall"
		android:gravity="center_vertical"
		android:textAppearance="?attr/textAppearanceListItemSmall"
		android:textIsSelectable="false"
		tools:text="Application Drawer Item"
		/>
	<include
		android:id="@id/count"
		layout="@layout/inc_count"
		android:visibility="invisible"
		tools:visibility="visible"
		/>
</LinearLayout>
