<?xml version="1.0" encoding="utf-8"?>
<!-- Measured from gmail's compose FAB:
	circle 56dp
	pen 18dp
	maximum square inside 40dp
	square to circle edge 8dp
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- To debug the shadow, because the layout editor adds an extra shadow to the drawable -->
	<!--<item><color android:color="#fff0" /></item>-->
	<item>
		<shape android:shape="oval">
			<!-- gradientRadius is really buggy, so it has to be a weird number:
				the oval is 300dp -> xxhdpi @ 3x -> 900px
				i want gradientRadius=50% -> 900px * 50% = 450px
				450 = 45000% since % means /100
				this has to be a different value for each dpi bucket
			-->
			<gradient android:centerColor="#f000"
			          android:endColor="#0000"
			          android:gradientRadius="@fraction/fabShadow"
			          android:type="radial" />
			<size android:width="300dp" android:height="300dp" />
		</shape>
	</item>
	<item android:left="12dp" android:top="12dp" android:right="20dp" android:bottom="24dp">
		<shape android:shape="oval">
			<solid android:color="#fff" />
		</shape>
	</item>
	<!-- btn_add is 100dp adding 100dp+100dp margin around it makes it 33%
	     which approximates pen/circle ratio
	     right and bottom has an additional offset of (right-left) and (bottom-top)
	     to center the cross inside the circle, which distorts 33% a little
	-->
	<item android:left="100dp" android:top="100dp"
	      android:right="108dp" android:bottom="108dp"
		>
		<layer-list>
			<!-- Vertical component of a + shaped cross, horizontal distribution is 40(gap)-20(vertical rect)-40(gap) = 100 -->
			<item android:left="40dp" android:right="40dp">
				<shape android:shape="rectangle">
					<size android:width="20dp" />
					<corners android:radius="4dp" />
					<solid android:color="#f000" />
				</shape>
			</item>

			<!-- Horizontal component of a + shaped cross, vertical distribution is 40(gap)-20(horizontal rect)-40(gap) = 100 -->
			<item android:top="40dp" android:bottom="40dp">
				<shape android:shape="rectangle">
					<size android:height="20dp" />
					<corners android:radius="4dp" />
					<solid android:color="#f000" />
				</shape>
			</item>
		</layer-list>
	</item>
</layer-list>
