<?xml version="1.0" encoding="utf-8"?>
<!-- XXX clean up unknown colors before release -->
<selector
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	>
	<!-- FIXME check how this behaves on lower API: state_activated=11 and state_hovered=14 -->

	<item android:state_hovered="true" tools:ignore="UnusedAttribute">
		<color android:color="#f00" />
	</item>
	<item android:state_focused="true">
		<color android:color="#0f0" />
	</item>
	<item android:state_active="true">
		<color android:color="#ff0" />
	</item>
	<item android:state_checked="true">
		<color android:color="#0ff" />
	</item>
	<item android:state_enabled="false">
		<color android:color="@color/primaryDark" />
	</item>
	<!-- Temporary list selection on tap -->
	<item android:state_pressed="true">
		<color android:color="@color/accentDark" />
	</item>
	<!-- Currently active UI item -->
	<item android:state_selected="true">
		<shape android:shape="rectangle">
			<solid android:color="@color/accent" />
			<stroke android:width="@dimen/marginHalf" android:color="@color/accentDark" />
		</shape>
	</item>
	<!-- Selected spinner item, Selected list item -->
	<item android:state_activated="true" tools:ignore="UnusedAttribute">
		<color android:color="@color/primary" />
	</item>
	<item android:drawable="@android:color/transparent" />
</selector>
