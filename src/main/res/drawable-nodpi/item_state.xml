<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_enabled="false">
		<color android:color="@color/primaryDark" />
	</item>
	<!-- Temporary list selection on tap -->
	<item android:state_pressed="true">
		<color android:color="@color/accentDark" />
	</item>
	<!-- Currently active UI item -->
	<item android:state_selected="true">
		<shape android:shape="rectangle">
			<solid android:color="@color/accent" />
			<stroke android:width="@dimen/marginHalf" android:color="@color/accentDark" />
		</shape>
	</item>
	<!-- Not supported pre-API 11, ignore: <item android:state_activated="true"> -->
	<item android:drawable="@android:color/transparent" />
</selector>
