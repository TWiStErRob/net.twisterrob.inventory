<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- Hovered state is ignored prior to API 14 which means this selector will always match.
	<item android:state_hovered="true" tools:ignore="UnusedAttribute">
		<color android:color="#f00" />
	</item>
	-->
	<!-- CONSIDER figure out what these are
	<item android:state_focused="true">
		<color android:color="#0f0" />
	</item>
	<item android:state_active="true">
		<color android:color="#ff0" />
	</item>
	<item android:state_checked="true">
		<color android:color="#0ff" />
	</item>
	-->
	<item android:state_enabled="false">
		<color android:color="@color/primaryDark" />
	</item>
	<!-- Temporary list selection on tap -->
	<item android:state_pressed="true">
		<color android:color="@color/accentDark" />
	</item>
	<!-- Currently active UI item -->
	<item android:state_selected="true">
		<shape android:shape="rectangle">
			<solid android:color="@color/accent" />
			<stroke android:width="@dimen/unit_quarter" android:color="@color/accentDark" />
		</shape>
	</item>
	<!-- Selected spinner item, requires API 11, CONSIDER figure something out for pre-11 -->
	<item android:state_activated="true">
		<color android:color="@color/primary" />
	</item>
	<item android:drawable="@android:color/transparent" />
</selector>
