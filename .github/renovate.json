{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"local>TWiStErRob/renovate-config"
	],
	"packageRules": [
		{
			"description": "Don't update AndroidX packages yet.",
			"matchPackagePrefixes": [
				"androidx.",
				"com.google.android.material:"
			],
			"enabled": false
		},
		{
			"description": "Don't update Guava.",
			"matchPackageNames": [
				"com.google.guava:guava"
			],
			"enabled": false
		},
		{
			"description": "Don't update Mockito, PowerMock does not support newer.",
			"matchPackageNames": [
				"org.mockito:mockito-android",
				"org.mockito:mockito-inline",
				"org.mockito.kotlin:mockito-kotlin"
			],
			"enabled": false
		},
		{
			"description": "Don't update Saxon, will do it later.",
			"matchPackageNames": [
				"net.sf.saxon:Saxon-HE"
			],
			"matchUpdateTypes": "major",
			"enabled": false
		}
	]
}
