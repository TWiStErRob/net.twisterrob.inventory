<?xml version="1.0" encoding="utf-8"?>
<cursor-adapter xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res/net.twisterrob.inventory"
		app:layout="@layout/room_list_item">
	<bind app:from="name" app:to="@id/roomName" app:as="string" />
	<bind app:from="typeImage" app:to="@id/roomImage" app:as="image-uri">
		<transform app:withExpression="android.resource://net.twisterrob.inventory/drawable/{typeImage}" />
	</bind>
</cursor-adapter>
