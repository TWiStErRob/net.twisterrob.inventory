<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="net.twisterrob.inventory"
	android:versionCode="1"
	android:versionName="1.0">

	<uses-sdk
		android:minSdkVersion="9"
		android:targetSdkVersion="19" />
	<uses-permission android:name="android.permission.CAMERA" />
	<uses-feature
		android:name="android.hardware.camera.autofocus"
		android:required="false" />
	<uses-feature
		android:name="android.hardware.camera"
		android:required="false" />
	<uses-permission
		android:name="android.permission.WRITE_EXTERNAL_STORAGE"
		android:maxSdkVersion="18" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.INTERNET" /> <!-- ViewServer -->

	<application
		android:name="net.twisterrob.inventory.android.App"
		android:allowBackup="true"
		android:label="@string/app_name"
		android:theme="@style/AppTheme">
		<meta-data
			android:name="com.google.android.gms.version"
			android:value="@integer/google_play_services_version" />
		<activity android:name="net.twisterrob.inventory.android.activity.MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name="net.twisterrob.inventory.android.activity.WelcomeActivity"
			android:label="@string/app_name">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="net.twisterrob.inventory.android.activity.MainActivity" />
		</activity>
		<activity
			android:name="net.twisterrob.inventory.android.activity.PickDriveFileActivity"
			android:label="@string/app_name">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="net.twisterrob.inventory.android.activity.MainActivity" />
		</activity>
		<activity
			android:name="net.twisterrob.inventory.android.activity.CaptureImage"
			android:label="@string/app_name"
			android:screenOrientation="fullSensor" />
		<activity
			android:name="net.twisterrob.inventory.android.activity.PropertyListActivity"
			android:label="@string/property_title">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="net.twisterrob.inventory.android.activity.MainActivity" />
		</activity>
		<activity
			android:name="net.twisterrob.inventory.android.activity.PropertyEditActivity"
			android:label="@string/property_new">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="net.twisterrob.inventory.android.activity.PropertyListActivity" />
		</activity>
		<activity
			android:name="net.twisterrob.inventory.android.activity.PropertyViewActivity"
			android:label="@string/room_title">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="net.twisterrob.inventory.android.activity.PropertyListActivity" />
		</activity>
		<activity
			android:name="net.twisterrob.inventory.android.activity.RoomEditActivity"
			android:label="@string/room_new">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="net.twisterrob.inventory.android.activity.PropertyViewActivity" />
		</activity>
		<activity
			android:name="net.twisterrob.inventory.android.activity.RoomViewActivity"
			android:label="@string/item_title">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="net.twisterrob.inventory.android.activity.PropertyViewActivity" />
		</activity>
		<activity
			android:name="net.twisterrob.inventory.android.activity.ItemViewActivity"
			android:label="@string/item_title">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="net.twisterrob.inventory.android.activity.RoomViewActivity" />
		</activity>
		<activity
			android:name="net.twisterrob.inventory.android.activity.ItemEditActivity"
			android:label="@string/item_new">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="net.twisterrob.inventory.android.activity.ItemViewActivity" />
		</activity>
	</application>
</manifest>
