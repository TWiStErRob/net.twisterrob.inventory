<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="net.twisterrob.inventory"
	android:versionCode="1"
	android:versionName="1.0">

	<uses-sdk
		android:minSdkVersion="9"
		android:targetSdkVersion="19" />

	<application
		android:name="net.twisterrob.inventory.android.App"
		android:allowBackup="true"
		android:label="@string/app_name"
		android:theme="@style/AppTheme">
		<activity android:name="net.twisterrob.inventory.android.activity.MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name="net.twisterrob.inventory.android.activity.PropertiesActivity"
			android:label="@string/property_title">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="net.twisterrob.inventory.android.activity.MainActivity" />
		</activity>
		<activity
			android:name="net.twisterrob.inventory.android.activity.PropertyEditActivity"
			android:label="@string/property_new">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="net.twisterrob.inventory.android.activity.PropertiesActivity" />
		</activity>
		<activity
			android:name="net.twisterrob.inventory.android.activity.RoomsActivity"
			android:label="@string/room_title">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="net.twisterrob.inventory.android.activity.PropertiesActivity" />
		</activity>
		<activity
			android:name="net.twisterrob.inventory.android.activity.RoomEditActivity"
			android:label="@string/room_new">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="net.twisterrob.inventory.android.activity.RoomsActivity" />
		</activity>
		<activity
			android:name="net.twisterrob.inventory.android.activity.ItemsActivity"
			android:label="@string/item_title">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="net.twisterrob.inventory.android.activity.RoomsActivity" />
		</activity>
		<activity
			android:name="net.twisterrob.inventory.android.activity.ItemEditActivity"
			android:label="@string/item_new">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="net.twisterrob.inventory.android.activity.ItemsActivity" />
		</activity>
	</application>
<!-- 	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> -->
</manifest>
